<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etEntrega"
        android:layout_alignBottom="@+id/etEntrega"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:text="Entrega: "
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvEntrega"
        android:ems="8"
        android:inputType="numberDecimal"
        tools:ignore="LabelFor"
        android:importantForAutofill="no" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPagos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/etEntrega" />

</RelativeLayout>
