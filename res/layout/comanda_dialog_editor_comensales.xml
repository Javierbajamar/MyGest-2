<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/btn_default_small" >

    <TextView
        android:id="@+id/txt_titulo_unidades_comensales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:text="@string/txt_num_comensales"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="monospace" />

    <Button
        android:id="@+id/bt_dialog_guardar_comensales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_unid_comensales"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/bt_cerrar_dialog_comensales"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000000"
        android:text="@string/pref_dialog_guardar" />

    <EditText
        android:id="@+id/txt_unid_comensales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_dialog_restar_comensales"
        android:layout_alignLeft="@+id/txt_titulo_unidades_comensales"
        android:layout_alignRight="@+id/txt_titulo_unidades_comensales"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="number"
        tools:ignore="LabelFor">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bt_dialog_sumar_comensales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bt_dialog_guardar_comensales"
        android:background="@android:drawable/editbox_background"
        android:text="+"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_dialog_restar_comensales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_dialog_sumar_comensales"
        android:layout_below="@+id/bt_dialog_sumar_comensales"
        android:background="@android:drawable/editbox_background"
        android:text="-"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_cerrar_dialog_comensales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_dialog_guardar_comensales"
        android:layout_alignLeft="@+id/txt_unid_comensales"
        android:layout_alignTop="@+id/bt_dialog_guardar_comensales"
        android:background="@android:drawable/editbox_background"
        android:drawableTop="@android:drawable/ic_menu_revert"
        android:text="" />

</RelativeLayout>